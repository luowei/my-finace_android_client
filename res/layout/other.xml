<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android"
        android:focusableInTouchMode="true" android:background="@color/withe">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="金额:"
            android:id="@+id/money_textView"
            android:layout_alignParentLeft="true" android:layout_marginLeft="30dp"
            android:layout_alignParentTop="true" android:layout_marginTop="20dp"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="18.0000"
            android:id="@+id/money_editText"
            android:layout_alignParentLeft="true" android:layout_marginLeft="80dp"
            android:layout_alignBaseline="@+id/money_textView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="星期:"
            android:id="@+id/week_textView"
            android:layout_alignLeft="@+id/money_textView" android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="星期一"
            android:id="@+id/week_editText"
            android:layout_alignLeft="@+id/money_editText" android:layout_alignBaseline="@+id/week_textView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="日期:"
            android:id="@+id/date_textView"
            android:layout_alignLeft="@+id/money_textView" android:layout_alignParentTop="true"
            android:layout_marginTop="120dp"/>
    <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="4月6日"
            android:id="@+id/date_editText"
            android:layout_alignLeft="@+id/money_editText" android:layout_alignBaseline="@+id/date_textView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述："
            android:id="@+id/desc_textView"
            android:layout_alignLeft="@+id/money_textView" android:layout_alignParentTop="true"
            android:layout_marginTop="200dp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:id="@+id/desc_editText"
            android:layout_alignLeft="@+id/money_editText"  android:layout_alignBaseline="@+id/desc_textView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户:"
            android:id="@+id/user_textView"
            android:layout_alignLeft="@+id/money_textView" android:layout_alignParentTop="true"
            android:layout_marginTop="280dp"/>
    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/user_editText"
            android:layout_alignLeft="@+id/money_editText" android:layout_alignBaseline="@+id/user_textView"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加记录"
            android:id="@+id/add_button"
            android:layout_centerHorizontal="true" android:layout_alignTop="@+id/list_button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="列表"
            android:id="@+id/list_button"
            android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"/>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="退出"
            android:id="@+id/exit_button"
            android:layout_alignParentRight="true" android:layout_alignTop="@+id/list_button"/>
</RelativeLayout>